{
    "name": "project/app-laravel",
    "type": "project",
    "description": "Hotel Bookings Web App Manager based on { Blade || Php , HTML , Js , Css } From Scratch .",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.0.2",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "8.x-dev",
        "laravel/tinker": "3.x-dev",
        "laravel/sanctum": "^2.8",
        "orchestra/testbench": "^6.38.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.18",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^5.4.28",
        "nunomaduro/termwind": "^1.13",
        "phpunit/phpunit": "9.6.x-dev",
        "spatie/laravel-ignition": "1.x-dev",
        "illuminate/support": "^8.83.27"

    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Seeders\\": "database/seeders/",
            "Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "classmap" : [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-discover-package": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "post-create-project": [
            "@php artisan key:generate --no-ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-test-project": [
            "/vendor/bin/phpunit  --testsuite=Unit --bootstrap /vendor/autoload.php tests"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "8.x-dev"
        },
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "prefer-lowest": true,
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    }
}
